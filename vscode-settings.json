{
  "workbench.colorTheme": "Ocean Space Italic",
  "workbench.colorCustomizations": {
    "[Ocean Space Italic]": {
      // Theme-specific color overrides
      "menu.background": "#0f111a",
      "menu.foreground": "#E5E5E5",
      "menu.selectionBackground": "#0b0d14",
      "menu.selectionForeground": "#FFFFFF",
      "menu.border": "#0b0d14",
      "tab.activeBackground": "#0b0d14",
      "tab.inactiveBackground": "#0f111a",
      "editor.selectionBackground": "#ffffff10",
      "editor.wordHighlightBackground": "#ffffff10",
      "editor.wordHighlightStrongBackground": "#ffffff10",
      "editor.selectionHighlightBackground": "#ffffff10",

      // === Matching Tag / Bracket Highlight Fix ===
      "editorBracketMatch.border": "#ffffff10",
      "editorBracketMatch.background": "#ffffff10",
      "editorBracketHighlight.unexpectedBracket.foreground": "#ffffff10",
      "editor.linkedEditingBackground": "#ffffff10"
    }
  },
  "terminal.integrated.tabs.defaultIcon": "terminal-bash",
  "workbench.iconTheme": "material-icon-theme",
  "window.menuBarVisibility": "compact",
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  "chat.commandCenter.enabled": false,
  "workbench.statusBar.visible": false,
  "editor.formatOnSave": true,
  "editor.fontFamily": "Dank Mono",
  "files.autoSave": "afterDelay",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "expand",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorWidth": 2,
  "workbench.productIconTheme": "material-product-icons",
  "editor.wordWrap": "on",
  "editor.lineHeight": 2,
  "debug.console.lineHeight": 2,
  "notebook.markdown.lineHeight": 2,
  "notebook.output.lineHeight": 2,
  "chat.editor.lineHeight": 2,
  "editor.overtypeCursorStyle": "line",
  "editor.autoIndentOnPaste": true,
  "editor.fontSize": 16,
  "editor.stickyScroll.enabled": false,
  "breadcrumbs.enabled": false,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorStyleInactive": "line",
  "terminal.integrated.lineHeight": 1.4,
  "editor.inlineSuggest.edits.showCollapsed": true,
  "window.zoomLevel": 1.5,
  "workbench.startupEditor": "none",
  "terminal.integrated.stickyScroll.enabled": false

}
