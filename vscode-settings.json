{
  "workbench.colorTheme": "Ocean Space Italic",
  "workbench.colorCustomizations": {
    // === THEME-SPECIFIC OVERRIDES ===
    "[Ocean Space Italic]": {
      // Theme-specific color overrides
      "menu.background": "#0f111a", // Sets menu background to dark gray-purple
      "menu.foreground": "#E5E5E5", // Sets menu text color to light gray
      "menu.selectionBackground": "#0b0d14", // Sets selection background in menu
      "menu.selectionForeground": "#FFFFFF", // Sets selection text color in menu
      "menu.border": "#0b0d14", // Defines border color for menu
      "tab.activeBackground": "#0b0d14", // Background for active tab
      "tab.inactiveBackground": "#0f111a", // Background for inactive tabs
      "editor.selectionBackground": "#ffffff10", // Light transparent highlight for selections
      "editor.wordHighlightBackground": "#ffffff10", // Light transparent highlight for matching words
      "editor.wordHighlightStrongBackground": "#ffffff10" // For read/write variables,
    }
  },

  "editor.renderLineHighlight": "none", // Disables line highlight for current line
  "workbench.iconTheme": "material-icon-theme",
  "workbench.productIconTheme": "material-product-icons",
  "window.menuBarVisibility": "compact",
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  "editor.formatOnSave": true,
  "files.autoSave": "afterDelay",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "'Dank Mono'",
  "editor.wordWrap": "on",
  "editor.mouseWheelZoom": true,
  "editor.formatOnPaste": true,
  "editor.autoClosingBrackets": "always",
  "editor.autoClosingComments": "always",
  "editor.autoClosingDelete": "always",
  "editor.autoClosingOvertype": "always",
  "editor.autoClosingQuotes": "always",
  "editor.autoIndentOnPaste": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.codeLensFontFamily": "Dank Mono",
  "window.zoomLevel": 1.5,
  "editor.foldingImportsByDefault": true,
  "editor.guides.highlightActiveIndentation": false,
  "editor.inlayHints.fontFamily": "Dank Mono",
  "editor.inlayHints.padding": true,
  "editor.lineHeight": 2,
  "editor.linkedEditing": true,
  "editor.overtypeCursorStyle": "line",
  "editor.renderFinalNewline": "on",
  "editor.scrollbar.verticalScrollbarSize": 10,
  "editor.scrollbar.horizontalScrollbarSize": 10,
  "editor.scrollBeyondLastLine": false,
  "editor.showFoldingControls": "always",
  "editor.stickyScroll.enabled": false,
  "editor.tabCompletion": "on",
  "editor.trimWhitespaceOnDelete": true,
  "editor.unfoldOnClickAfterEndOfLine": true,
  "editor.wrapOnEscapedLineFeeds": true,
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.fontLigatures": true,
  "editor.formatOnType": true,
  "diffEditor.codeLens": true,
  "editor.minimap.showSlider": "always",
  "editor.inlineSuggest.fontFamily": "Dank Mono",
  "editor.inertialScroll": true,
  "editor.smoothScrolling": true,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.enabled": false,
  "workbench.list.smoothScrolling": true,
  "files.autoSaveDelay": 0,
  "files.insertFinalNewline": true,
  "breadcrumbs.enabled": false,
  "workbench.editor.scrollToSwitchTabs": true,
  "workbench.editor.tabSizing": "shrink",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,
  "explorer.confirmPasteNative": false,
  "explorer.decorations.colors": false,
  "search.showLineNumbers": true,
  "search.decorations.colors": false,
  "search.smartCase": true,
  "scm.alwaysShowActions": true,
  "scm.alwaysShowRepositories": true,
  "scm.compactFolders": false,
  "terminal.integrated.fontFamily": "Dank Mono",
  "terminal.integrated.fontLigatures.enabled": true,
  "terminal.integrated.lineHeight": 1.5,
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.stickyScroll.enabled": false,
  "terminal.integrated.tabs.defaultIcon": "terminal-bash",
  "terminal.integrated.tabs.focusMode": "singleClick",
  "terminal.integrated.tabs.location": "right",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorStyleInactive": "line",
  "terminal.integrated.cursorWidth": 2,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.hideOnStartup": "always",
  "notebook.defaultFormatter": "esbenp.prettier-vscode",
  "notebook.formatOnSave.enabled": true,
  "notebook.insertFinalNewline": true,
  "notebook.markdown.lineHeight": 2,
  "notebook.markup.fontFamily": "Dank Mono",
  "notebook.multiCursor.enabled": true,
  "notebook.outline.showCodeCells": true,
  "notebook.output.fontFamily": "Dank Mono",
  "notebook.output.wordWrap": true,
  "notebook.showFoldingControls": "always",
  "chat.checkpoints.showFileChanges": true,
  "chat.disableAIFeatures": true,
  "chat.editor.fontFamily": "Dank Mono",
  "chat.editor.lineHeight": 2,
  "chat.editor.wordWrap": "on",
  "chat.fontFamily": "Dank Mono",
  "chat.fontSize": 14,
  "css.format.spaceAroundSelectorSeparator": true,

  //Custom Ui Customisation
  "custom-ui-style.font.sansSerif": "Dank Mono" // Uses Dank Mono font for UI text
}
